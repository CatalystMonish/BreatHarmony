<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical">
    <TextView
        android:textColor="@color/dark"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:text="How do you feel?"
        android:textAlignment="center"
        android:textSize="20dp"
        android:fontFamily="@font/nexab"
        android:layout_height="wrap_content"/>
<LinearLayout
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageButton
        android:id="@+id/mood_happy"
        android:layout_weight="1"
     android:backgroundTint="@color/login_bg"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:src="@drawable/ic_happy"/>
    <ImageButton
        android:id="@+id/mood_loved"
        android:layout_weight="1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="fitCenter"
        android:backgroundTint="@color/login_bg"
        android:layout_gravity="center"
        android:src="@drawable/ic_love"/>
    <ImageButton
        android:id="@+id/mood_kiss"
        android:layout_weight="1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="fitCenter"
        android:backgroundTint="@color/login_bg"
        android:layout_gravity="center"
        android:src="@drawable/ic_kiss"/>
    <ImageButton
        android:id="@+id/mood_sleepy"
        android:layout_weight="1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="fitCenter"
        android:backgroundTint="@color/login_bg"
        android:layout_gravity="center"
        android:src="@drawable/ic_sleepy"/>
    <ImageButton
        android:id="@+id/mood_sad"
        android:layout_weight="1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="fitCenter"
        android:backgroundTint="@color/login_bg"
        android:layout_gravity="center"
        android:src="@drawable/ic_crying"/>
</LinearLayout>
</LinearLayout>