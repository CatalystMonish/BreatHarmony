<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:src="@drawable/bg_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    </FrameLayout>
    <TextView
        android:textColor="#5B5B5B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to your Journey \n Of Mindfullness!"
        android:fontFamily="@font/main"
        android:textAlignment="center"
        android:layout_marginTop="70dp"
        android:textSize="28dp"/>
    <ImageView
        android:id="@+id/login_center"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@drawable/meditation"
        android:layout_centerInParent="true"/>
    <TextView
        android:textColor="#5B5B5B"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/login_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meditation, yoga and more!"
        android:fontFamily="@font/main"
        android:textAlignment="center"
        android:textSize="20dp"/>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
<ImageButton
    android:layout_gravity="center"
    android:background="#c7ffd8"
    android:src="@drawable/btn_signin"
    android:layout_width="235dp"
    android:scaleType="centerCrop"
    android:padding="0dp"
    android:layout_height="47dp"
    android:id="@+id/btn_signin"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_policy"
        android:layout_marginBottom="10dp"
        android:textColor="#727272"
        android:layout_below="@+id/btn_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="By Signing In you agree to our Privacy Policy \n and Terms of Service"
        android:fontFamily="@font/ubuntu"
        android:textAlignment="center"
        android:textSize="13dp"/>
    </LinearLayout>
</RelativeLayout>