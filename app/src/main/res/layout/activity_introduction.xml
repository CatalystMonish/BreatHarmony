<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    android:orientation="vertical"
    tools:context=".IntroductionActivity">
    <TextView
        android:layout_marginTop="40dp"
        android:textColor="@color/light_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Breatharmony"
        android:textAlignment="center"
        android:fontFamily="@font/nexab"
        android:textSize="30dp" />
<LinearLayout
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_width="300dp"
    android:id="@+id/ll_1"
    android:layout_marginTop="60dp"
    android:layout_marginBottom="20dp"
    android:layout_height="300dp">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/center_lottie"
        android:layout_gravity="center"
        android:layout_height="200dp"
        android:layout_width="200dp"
        app:lottie_rawRes="@raw/ic_plant"
        app:lottie_autoPlay="true"/>
    <ImageView
        android:visibility="gone"
        android:id="@+id/center_image"
        android:layout_gravity="center"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:src="@drawable/ic_lotus"/>
</LinearLayout>
    <Space
        android:visibility="gone"
        android:id="@+id/space2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
<androidx.appcompat.widget.AppCompatButton
    android:background="@drawable/btn_begin_bg"
    android:visibility="gone"
    android:id="@+id/btn_begin"
    android:textColor="@color/light"
    android:layout_marginStart="80dp"
    android:layout_marginEnd="80dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:fontFamily="@font/nexab"
    android:backgroundTint="@color/lightgray"
    android:text="Begin Your Journey"/>
    <TextView
        android:visibility="visible"
        android:id="@+id/tv_bottom_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:lineSpacingExtra="5dp"
        android:fontFamily="@font/nexab"
        android:textColor="@color/dark"
        android:text="Each little plant takes 3 days to grow! "/>
    <TextView
        android:layout_marginTop="10dp"
        android:visibility="visible"
        android:id="@+id/tv_bottom_text_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:lineSpacingExtra="5dp"
        android:fontFamily="@font/nexab"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/lightgray"
        android:text="If you forget to meditate for a day in between, it dies!"/>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        app:tint="@color/white"
        android:id="@+id/btn_next"
        android:src="@drawable/ic_forward"
        app:backgroundTint="@color/lightgray"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"/>
    <TextView
        android:id="@+id/tv_firstStep"
        android:visibility="gone"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take the first step!"
        android:textSize="15dp"
        android:fontFamily="@font/nexab"
        android:textAlignment="center"/>
</LinearLayout>