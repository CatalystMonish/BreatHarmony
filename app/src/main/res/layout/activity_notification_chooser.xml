<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".NotificationChooser">
    <LinearLayout
        android:background="@color/dark_blue_app"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:layout_marginStart="17dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/title_my_progress"
            android:text="Reminder Settings"
            android:textColor="@color/light"
            android:textSize="22sp"
            android:fontFamily="@font/nexab"/>
    </LinearLayout>
    <TextView
        android:layout_above="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textSize="22dp"
        android:layout_marginStart="15dp"
        android:textColor="@color/dark"
        android:fontFamily="@font/nexab"
        android:text="Select Time For Daily Reminder"/>
    <LinearLayout
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_marginTop="70dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
    <TextView
        android:textAlignment="center"
        android:layout_gravity="center"
        android:lineSpacingExtra="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="07:00"
        android:textColor="#4E4E4E"
        android:textSize="60dp"
        android:id="@+id/notif_time"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/nexab"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="30dp"
            android:id="@+id/am_btn"
            android:text="Am"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:background="@drawable/btn_round_selected"
            android:layout_height="30dp"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="30dp"
            android:id="@+id/pm_btn"
            android:text="Pm"
            android:textSize="12dp"
            android:background="@drawable/btn_round_un"
            android:layout_height="30dp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:text="Click To change Time"
        android:textSize="15dp"
        android:textAlignment="center"
        android:id="@+id/btn_chng_time"
        android:fontFamily="@font/nexab"
        android:textColor="#505050"
        android:layout_height="wrap_content"/>

  <Space
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        app:tint="@color/white"
        android:id="@+id/btn_forward_time"
        android:src="@drawable/ic_baseline_check_24"
        app:backgroundTint="@color/lightgray"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="20dp"/>
</LinearLayout>