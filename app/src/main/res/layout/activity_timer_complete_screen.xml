<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".TimerCompleteScreen">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_rawRes="@raw/ic_confetti"
            app:lottie_autoPlay="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:textColor="@color/dark"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meditation"
        android:textSize="33dp"
        android:textAlignment="textEnd"
        android:fontFamily="@font/nexab"/>
        <TextView
            android:layout_marginStart="7dp"
            android:layout_weight="1"
            android:textColor="@color/dark_blue_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complete!"
            android:textSize="33dp"
            android:textAlignment="textStart"
            android:fontFamily="@font/nexab"/>
        </LinearLayout>
    <TextView
        android:id="@+id/tv_oldTIme"
        android:textColor="@color/dark"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:text="2:00\nminutes"
        android:textSize="30dp"
        android:textAlignment="center"
        android:fontFamily="@font/nexab"/>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/ll_btns"
            android:visibility="visible"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/btn_finish"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@drawable/btn_prog_bg"
        android:fontFamily="@font/nexab"
        app:backgroundTint="@color/lightgray"
        android:text=" FINISH"
        android:drawablePadding="5dp"
        android:drawableTint="@color/white"
        android:drawableRight="@drawable/ic_baseline_check_24"
        android:textAlignment="center"
        android:textColor="@color/white"/>
            <Space
                android:layout_width="30dp"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:text="History"
                android:textColor="@color/white"
                android:id="@+id/btn_history_end"
                android:textSize="13dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:drawableTint="@color/white"
                android:fontFamily="@font/nexab"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/ic_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_prog_bg"
                android:layout_gravity="end"
                android:src="@drawable/ic_baseline_history_24"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:id="@+id/add_shown"
            android:visibility="visible"
            android:textAlignment="center"
            android:textSize="17dp"
            android:layout_marginTop= "5dp"
            android:fontFamily="@font/nexab"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A short advertisement may get shown!"/>
</LinearLayout>
    </FrameLayout>
</LinearLayout>